<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maca.rentagame.MainActivity">

        <ListView
        android:id="@+id/gamesList"
        android:layout_width="336dp"
        android:layout_height="380dp"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="119dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Add Game"
        app:layout_constraintEnd_toEndOf="@+id/gamesList"
        app:layout_constraintStart_toStartOf="@+id/gamesList"
        app:layout_constraintTop_toBottomOf="@+id/gamesList"
        android:background="@color/itemBackgroundAddButton"/>

</android.support.constraint.ConstraintLayout>
